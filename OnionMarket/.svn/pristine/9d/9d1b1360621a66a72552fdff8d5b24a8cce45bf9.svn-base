@charset "UTF-8";

/* 공통 */
:root {

    /* color */
    --main-color: #212D56;
    --main-hover-color: #151f42;
    --gray-color: #f4f6f8;
    --gray-hover-color: #e7e7e7;
    --warning-color: #ec4848;
    --sub-color: #e4eefe;

    /* icon*/
    --icon: "xeicon";

    --gray-font: #8e8e8e;


    /* 버튼 */
    --btn-shadow: 0px 4px 9.6px 0.4px rgba(0, 0, 0, 0.05);
    --btn-gray: #e1e1e1;
}


.flex-box {
    display: flex;
    align-items: center;
    justify-content: center;
}


.admin-page {
    display: flex;
    min-height: 100vh;
}

aside {
    background: #212D56;
    width: 240px;
    position: relative;
}

aside .menu {
    margin-top: 60px;
}

aside .menu a {
    color: #fff;
    display: block;
    padding: 10px 40px;
    font-size: 20px;
    line-height: 1.6;
    transition: all 0.3s;
}

aside .menu a:hover {
    background: #3f518b;
}

aside .menu .active {
    background: #3f518b;
}

aside .link {
    background: #fff;
    border-radius: 5px;
    padding: 10px 20px;
    position: absolute;
    bottom: 25px;
    left: 50%;
    transform: translateX(-50%);
    color: #000;
    width: max-content;
}

aside .link i {
    margin-left: 5px;
    vertical-align: middle;
}

.wrap {
    flex: 1;
    background: #E7EBF4;
}

header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 60px;
    background: #fff;
    padding: 30px;
}

header .logo {
    font-size: 20px;
    font-weight: 800;
}

main {
    margin: 30px;
    background: #fff;
    padding: 30px;
    border-radius: 10px;
}

main .heading1 {
    font-size: 30px;
    font-weight: 700;
    margin-bottom: 30px;
}

/* search-info */
.search-info {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20px;
}

.search-info .total {
    font-size: 18px;

}

.search-info .total span {
    font-weight: 700;
}

.search-info .form-area {
    display: flex;
    align-items: center;
    gap: 10px;
}

.search-form {}

.search-form select {
    height: 40px;
    border-radius: 7px;
    background: #fff;
    border: 1px solid #eee;
    padding: 0 10px;
    appearance: none;
    background: url(../img/arrow.png) no-repeat 70px / 15px;
    min-width: 100px;
}

.input-form input {
    height: 40px;
    background: #fff;
    border: 1px solid #eee;
    padding: 0 10px;
    border-radius: 7px;
}

.search-btn {
    width: 40px;
    height: 40px;
    background: #212D56;
    border-radius: 5px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.search-btn i {
    font-size: 20px;
    color: #fff;
}

/* table */
.table {
    width: 100%;
}


.table th {
    font-weight: 700;
}

.table th,
td {
    padding: 14px;
    text-align: center;
}

.table thead th {
    background: #dbdde6;
}

.table tbody tr:nth-child(even) {
    background: #fff;
}

.table tbody tr:nth-child(odd) {
    background: #F5F6FB;
}


/* 버튼스타일
--------------------------------------------- */
.btn-area {
    text-align: right;
    margin-top: 30px;
    display: flex;
    gap: 10px;
    justify-content: end;
}


.btn-style1aaa {
    height: 40px;
    background: #212D56;
    font-size: 18px;
    color: #fff;
    transition: all 0.3s;
    border-radius: 5px;
    text-align: center;
    min-width: 170px;
    box-shadow: 0px 4px 9.6px 0.4px rgba(0, 0, 0, 0.05);
}

.btn-style2aaaa {
    height: 40px;
    background: #e5e5e5;
    font-size: 18px;
    color: #000;
    transition: all 0.3s;
    border-radius: 5px;
    text-align: center;
    min-width: 170px;
    box-shadow: 0px 4px 9.6px 0.4px rgba(0, 0, 0, 0.05);
}

[class*="btn-style"] {
    box-shadow: var(--btn-shadow);
    border-radius: 10px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s;
    text-align: center;
}

a[class*="btn-style"] {
    display: flex;
    align-items: center;
    justify-content: center;
}

[class*="btn-style"]:hover {
    transform: scale(0.97);
}

.btn-style1 {
    width: 100%;
    height: 65px;
    background: var(--main-color);
    font-size: 20px;
    color: #fff;
}

.btn-style1:hover {
    background: var(--main-hover-color);
}

.btn-style2 {
    width: 100%;
    height: 40px;
    background: var(--btn-gray);
    font-size: 18px;
    color: #000;
    border-radius: 5px;
}

.btn-style3 {
    padding: 10px 20px;
    height: 50px;
    background: #8f8f8f;
    font-size: 18px;
    color: #fff;
    border-radius: 5px;
}

.btn-style3:hover {
    background: #7c7c7c;
}

.btn-style4 {
    height: 50px;
    background: var(--main-color);
    font-size: 18px;
    color: #fff;
    border-radius: 5px;
    min-width: 230px;
}

.btn-style5 {
    height: 50px;
    background: var(--btn-gray);
    font-size: 18px;
    color: #fff;
    border-radius: 5px;
    min-width: 230px;
    color: #000;
}

.btn-style6 {
    height: 50px;
    background: #fff;
    font-size: 18px;
    color: #fff;
    border-radius: 5px;
    min-width: 230px;
    color: #000;
    box-shadow: 0px 4px 9.6px 0.4px rgba(0, 0, 0, 0.05),
        2.1px 3.4px 9.6px 0.4px rgba(0, 0, 0, 0.05);
}

.btn-style7 {
    border: 1px solid var(--gray-color);
    color: #222;
    padding: 10px 20px;
    font-size: 18px;
    box-shadow: 0px 4px 9.6px 0.4px rgba(0, 0, 0, 0.05),
        2.1px 3.4px 9.6px 0.4px rgba(0, 0, 0, 0.05);
}

.btn-style8 {
    font-size: 18px;
    min-width: 230px;
    background: #f6cf91;
    padding: 20px;
    height: 72px;
    box-shadow: 0px 4px 9.6px 0.4px rgba(0, 0, 0, 0.05),
        2.1px 3.4px 9.6px 0.4px rgba(0, 0, 0, 0.05);
}

.btn-style9 {
    font-size: 18px;
    min-width: 230px;
    background: #a1daca;
    padding: 20px;
    height: 72px;
    box-shadow: 0px 4px 9.6px 0.4px rgba(0, 0, 0, 0.05),
        2.1px 3.4px 9.6px 0.4px rgba(0, 0, 0, 0.05);
}




/* 인풋요소들
--------------------------------------------- */

.input-group label {
    font-size: 16px;
    font-weight: 700;
    margin-bottom: 10px;
    display: block;
}

.input-group input:not([type="button"], [type="file"]) {
    width: 100%;
    height: 50px;
    padding: 0 20px;
    border-radius: 7px;
    background: #fff;
    border: 1px solid #eee;
    font-size: 18px;
}

.input-group input::placeholder {
    color: #bbbbbb;
}

.input-group textarea::placeholder {
    color: #bbbbbb;
}

.input-group textarea {
    width: 100%;
    padding: 20px;
    background: #fff;
    border: 1px solid #eee;
    font-size: 18px;
    border-radius: 7px;
}

.input-group.file {
    display: flex;
    align-items: end;
    gap: 10px;
}

.input-group select {
    width: 300px;
    height: 40px;
    padding: 0 10px;
    border-radius: 7px;
    border: 1px solid var(--gray-font);
}

.input-group select option {
    padding: 10px;
}


/* board */
.board-lst {}

.board-lst-insert ul li {
    margin-top: 15px;
}

.board-lst-insert .input-group textarea {
    height: 280px;
}

.board-lst-datail {
    border-top: 1px solid #e9e9e9;
    padding-top: 12px;
    position: relative;
}

.board-lst-datail ul li {
    margin-top: 15px;
}

.board-lst-datail .num {
    display: inline-block;
    font-weight: 700;
    background: #ebebeb;
    padding: 10px;
    border-radius: 10px;
}

.board-lst-datail .tit {
    font-size: 25px;
    font-weight: 600;
    text-transform: capitalize;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    display: -webkit-box;
    color: #212d56;
}

.board-lst-datail .date::before {
    content: "";
    width: 1px;
    height: 9px;
    background: #ddd;
    display: inline-block;
    margin: 0 10px;
}

.board-lst-datail .info-area {
    display: flex;
    align-items: center;
    border-top: 1px solid #f3f3f3;
    margin-top: 15px;
    padding-top: 15px;
}

.board-lst-datail .txt {
    padding: 20px 0;
    line-height: 1.5;
    font-size: 18px;
    text-align: left;
}

.board-lst-datail .type {
    color: #9e9e9e;
    margin-top: 10px;
    display: block;
}

.board-lst-datail.type-user {
    background: #fafafa;
    padding: 20px;
    border-radius: 10px;
    margin: 12px 0 20px;
    border-top: 0;
}

.board-lst-datail.type-user .tit {
    font-size: 20px;
}

.board-lst-datail.type-admin {
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 10px;
}

.board-lst-datail [class*="badge"] {
    position: absolute;
    right: 20px;
    top: 20px;
}