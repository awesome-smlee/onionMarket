@charset "UTF-8";

:root {
    /* color */
    --main-color: #1954db;
    --main-hover-color: #1244b8;
    --gray-color: #f4f6f8;
    --gray-hover-color: #e7e7e7;
    --warning-color: #ec4848;
    --sub-color: #e4eefe;

    /* icon*/
    --icon: "xeicon";
    --gray-font: #8e8e8e;

    /* 버튼 */
    --btn-shadow: 0px 4px 9.6px 0.4px rgba(0, 0, 0, 0.05);
    --btn-gray: #e1e1e1;
}

/*************************************
    # 공통
************************************/
body > div {overflow: hidden;}
.inner {
    max-width: 1200px;
    margin: 0 auto;
}

/* 필수입력 */
.i {
    color: var(--warning-color);
    font-weight: 800;
    vertical-align: middle;
    display: inline-block;
    margin-left: 10px;
}

.hr {
    margin: 20px 0;
    border: 1px solid var(--gray-color);
}

.flex-box {
    display: flex;
    align-items: center;
}

.flex-box-both {
    display: flex;
    align-items: center;
    justify-content: space-between;
}


/* scroll-top 버튼
--------------------------------------------- */
.scroll-top.fixed {
    opacity: 1;
    bottom: 20px;
}

.scroll-top {
    opacity: 0;
    position: fixed;
    z-index: 1;
    right: 20px;
    transition: all .5s ease;
}

.scroll-top button {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    width: 70px;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    box-shadow: 0px 7px 29.1px 0.9px rgba(0, 0, 0, 0.1);
    background-color: #fff;
    cursor: pointer;
    z-index: 100;
}

.scroll-top button i {
    font-size: 30px;
}

