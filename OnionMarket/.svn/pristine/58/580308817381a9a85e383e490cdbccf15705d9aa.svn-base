/* tab-type1 */
.tab-type1 .tab-menu {
    position: relative;
    display: inline-flex;
    align-items: center;
    background: #f4f6f8;
    border-radius: 10px;
    /* border: 1px solid #d6d8de44; */
    margin-bottom: 20px;
    width: 100%;
}

.tab-type1 .tab-menu .tab-btn {
    display: block;
    padding: 17px 45px;
    font-size: 20px;
    color: var(--color-gray);
    width: 50%;
}

.tab-type1 .tab-menu .tab-btn.active {
    color: #000;
    font-weight: 600;
    transition-delay: 0.1s;
    background: var(--main-color);
    color: #fff;
}

.tab-type1 .tab-content {
    display: none;
}

.tab-type1 .tab-content.active {
    display: block;
}

.tab-type1 .tab-indicator {
    position: absolute;
    bottom: 0;
    left: 0;
    min-width: 250px;
    width: 0;
    height: 100%;
    /* background: var(--main-color); */
    border: 2px solid var(--main-color);
    border-radius: 10px;
    cursor: pointer;
    transition: transform 0.2s ease-in-out, width 0.2s ease-in-out;
}

/* tab-type2 */
.tab-type2 .tab-menu {
    position: relative;
    display: flex;
    align-items: center;
    border-bottom: 3px solid rgba(255, 255, 255, 0.5);
    /* justify-content: center; */
}

.tab-type2 .tab-menu::before {
    content: "";
    border-bottom: 3px solid rgba(255, 255, 255, 0.5);
    width: 50px;
    position: absolute;
    z-index: -1;
    bottom: -3px;
    left: -50px;
}

.tab-type2 .tab-menu::after {
    content: "";
    border-bottom: 3px solid rgba(255, 255, 255, 0.5);
    width: 50px;
    position: absolute;
    z-index: -1;
    bottom: -3px;
    right: -50px;
}

.tab-type2 .tab-menu .tab-btn {
    display: block;
    padding: 15px;
    font-size: 15px;
    font-weight: 600;
    color: rgba(0, 0, 0, 0.227);
    transition: color 0.1s;
    width: 50%;
}


.tab-type2 .tab-menu .tab-btn.active {
    color: var(--color-dark);
    font-weight: 900;
    transition-delay: 0.1s;
}

.tab-type2 .tab-content {
    display: none;
    padding: 40px 0;
}

.tab-type2 .tab-content.active {
    display: block;
}

.tab-type2 .tab-indicator {
    position: absolute;
    bottom: -3px;
    left: 0;
    width: 0;
    height: 100%;
    border-bottom: 3px solid var(--main-color);
    cursor: pointer;
    transition: transform 0.2s ease-in-out, width 0.2s ease-in-out;
}

.tab-type2 .tab-indicator {
    /* min-width: 250px; */
    min-width: 50%;
    transform: translateX(0px);
}

.tab-type1 .tab-content.active .tab-board-lst,
.tab-type2 .tab-content.active .tab-board-lst {
    animation: fade-in-bottom 0.5s;
}

@keyframes fade-in-bottom {
    0% {
        opacity: 0;
        transform: translateY(15px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }
}



