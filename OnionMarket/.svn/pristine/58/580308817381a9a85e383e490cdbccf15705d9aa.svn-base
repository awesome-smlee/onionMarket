.content-list ul li .like span {
    margin-left: 5px;
    font-weight: 700;
}

/* 상단 서치폼 */
.item-search-box {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    border-radius: 10px;
    margin-bottom: 45px;
    position: relative;
}

.item-search-box input {
    width: 100%;
    height: 70px;
    border-radius: 40px;
    padding: 0 30px;
    border: 3px solid var(--main-color);
    font-size: 21px;
    font-weight: 700;
}

.item-search-box input::placeholder {
    font-weight: 500;
}

.item-search-box .sch-btn {
    position: absolute;
    right: 30px;
    top: 50%;
    transform: translateY(-50%);
    border-radius: 50%;
}

.item-search-box .sch-btn:after {
    content: "\e97a";
    font-family: var(--icon);
    font-size: 42px;
    color: var(--main-color);
}


/* 별점 */
.input-star .tit {
    font-size: 18px;
    font-weight: 700;
    margin-bottom: 10px;
}

.input-star .txt {
    font-size: 14px;
    color: var(--gray-font);
    margin-top: 10px;
}

.star-grade-wrap {
    display: flex;
    align-items: end;
}

.star-grade {
    display: flex;
    font-size: 0;
    line-height: 0;
    text-align: center;
}

.star-total {
    font-size: 18px;
    font-weight: 600;
    margin-left: 10px;
}

.star-grade input[type=radio] {
    width: 0;
    height: 0;
    opacity: 0;
    position: absolute;
    top: -100000px;
    left: -99999px;
}

.star-grade label {
    display: inline-block;
    width: 50px;
    height: 50px;
    background-color: #eee;
}

.star-grade label~label {
    margin-left: 13px;
}

.star-grade.on input[type=radio]:checked~label {
    background-color: #eee;
}

.star-grade.on input[type=radio]:checked+label {
    background-color: yellow;
}

.star-grade.on label {
    background-color: yellow;
}

/* news */

.news-area .board-table th,
td {
    text-align: center;
}

.news-area .board-table td {
    padding: 10px;
}

.news-area .tab-type1 .tab-menu .tab-btn {
    flex: 1;
    padding: 12px;
    font-size: 18px;
}

.news-area .tab-type1 .tab-menu .tab-btn.active {
    background: #cddcff;
    color: #4166ba;
}

/* 알림 */

.alarm-btn:hover i {
    color: var(--main-color);
}

.side-panel-area {
    visibility: hidden;
    opacity: 0;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 11;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.404);
    transition: visibility 0.3s, opacity 0.3s;
}

.side-panel-area.open {
    visibility: visible;
    opacity: 1;
}

.side-panel {
    position: absolute;
    right: 20px;
    top: 20px;
    width: 380px;
    background: #fff;
    z-index: 12;
    box-shadow: var(--btn-shadow);
    border-radius: 26px;
    height: calc(100% - 42px);
}

.side-panel-close {
    position: absolute;
    top: 30px;
    right: 30px;
}

.side-panel-close i {
    color: #000;
    font-size: 25px;
}

.side-panel .tit {
    font-size: 25px;
    font-weight: 700;
    margin: 31px 27px 27px;
}

.side-panel .tit i {
    margin-right: 10px;
    vertical-align: middle;
    color: var(--main-color);
    font-size: 32px;
}

.side-panel a {
    font-size: 16px;
    font-weight: 600;
    padding: 14px 32px;
    display: block;
}

.side-panel a:hover {
    background: #f1f1f1;
}

.like-btn {
	transition: transform 0.3s;
}
.like-btn:after {
	content: "\ea11";
	font-family: var(--icon);
	display: inline-block;
	color: #fa557f;
    font-size: 50px;
 }
 .like-btn.active:after {animation : like-ani 1s;}
 .like-btn.active:after {
     content: "\ea10";
 }
 
 @keyframes like-ani {
    0% {transform: scale(0.9);}
    100% {transform: scale(1);}
}

 
 /* 1:1 관리자 답변 */

.board-lst-datail.type-admin {
    background: #f9f9f9;
    border-top: none;
    border-radius: 15px;
    padding: 50px 20px;
}

.board-type-admin {
    display: block;
    font-size: 20px;
    font-weight: 700;
    color: var(--main-color);
    margin: 50px 0 10px;
    border-top: 1px solid #e9e9e9;
    padding-top: 37px;
}


.board-type-admin i {
    margin-right: 5px;
    font-size: 20px;
    vertical-align: middle;
}

.tracking-in-expand {
	-webkit-animation: tracking-in-expand 0.7s 0.7s cubic-bezier(0.215, 0.610, 0.355, 1.000) both;
	        animation: tracking-in-expand 0.7s 0.7s cubic-bezier(0.215, 0.610, 0.355, 1.000) both;
}

@-webkit-keyframes tracking-in-expand {
  0% {
    letter-spacing: -0.5em;
    opacity: 0;
  }
  40% {
    opacity: 0.6;
  }
  100% {
    opacity: 1;
  }
}
@keyframes tracking-in-expand {
  0% {
    letter-spacing: -0.5em;
    opacity: 0;
  }
  40% {
    opacity: 0.6;
  }
  100% {
    opacity: 1;
  }
}

