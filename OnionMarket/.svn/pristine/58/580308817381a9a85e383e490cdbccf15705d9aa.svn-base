/*************************************
    # header
************************************/
header .logo {
    font-size: 30px;
    font-weight: 800;
    position: relative;
}

header .logo:before {
	content: "";
    background: url(../img/favicon.png) no-repeat center / cover;
    width: 30px;
    height: 30px;
    position: absolute;
    left: -37px;
    top: 50%;
    transform: translateY(-50%) rotate(-19deg);}

header .logo span {
    color: var(--main-color);
    font-weight: 900;
}

header {
    position: fixed;
    top: 0;
    width: 100%;
    background: #fff;
    border-bottom: 1px solid #f2f2f2;
    z-index: 10;
    background: rgba(255, 255, 255, 0.76);
    backdrop-filter: blur(10px);
}

header .inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 110px;
}

/* 메뉴
--------------------------------------------- */
header nav {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

header nav .gnb {
    display: flex;
    align-items: center;
    justify-content: center;
}

header nav .gnb>li {
    display: inline-block;
}

header nav .gnb>li>a {
    display: inline-block;
    margin: 0 20px;
    font-weight: 900;
    font-size: 1.1rem;
    padding: 45px 0;
    cursor: pointer;
}

header nav .gnb>li>a:hover {
	color:var(--main-color);
}

header nav .gnb .depth2 {
    opacity: 0;
    visibility: hidden;
    position: absolute;
    top: 100%;
    right: -13px;
    padding-top: 10px;
}

header nav .gnb .depth2 ul {
    padding: 22px 22px;
    border-radius: 16px;
    background-color: #fff;
    box-shadow: 0 1px 16px rgba(0, 0, 0, 0.08);
}

header nav .gnb .depth2 ul li a {
    display: block;
    padding: 10px 10px;
    font-size: 17px;
    white-space: nowrap;
    text-align: center;
    cursor: pointer;
}

header nav .gnb .depth2 ul li a:hover {
    font-weight: 900;
}

/* header 오른쪽 버튼
--------------------------------------------- */
.util-area {
    display: flex;
    align-items: center;
    justify-content: center;
}

.util-area a {
    display: inline-block;
}

.util-area a:not(:first-child):hover {
	color: var(--main-hover-color);
}

.util-area a:not(:first-child) {
    margin-left: 20px;
}

.util-area .crt-prod-btn {
    background: var(--main-color);
    padding: 10px 15px;
    border-radius: 10px;
    color: #fff;
}

.util-area .crt-prod-btn:hover {
	background: var(--main-hover-color);
}

.util-area .user-btn i,
.alarm-btn i {
    font-size: 23px;
}

/*************************************
    # sub-menu
************************************/

.sub-menu {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 50px 0 30px;
    gap: 20px;
}

.sub-menu a {
    display: inline-block;
    padding: 10px 70px;
    border-radius: 7px;
    background: var(--gray-color);
}

.sub-menu .active {
    background: var(--main-color);
    color: #fff;
    font-weight: 700;
}


/*************************************
    # footer
************************************/
footer {
    background: #f2f2f2;
    padding: 40px 0;
}

footer * {
    font-size: 14px;
}

footer ul {
    display: flex;
    align-items: center;
    padding-bottom: 15px;
}

footer ul li:not(:first-child)::before {
    content: "";
    width: 1px;
