/*  버튼 스타일
--------------------------------------------- */
[class*="btn-style"] {
    box-shadow: var(--btn-shadow);
    border-radius: 10px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s;
    text-align: center;
}

a[class*="btn-style"] {
    display: inline-flex;
    align-items: center;
    justify-content: center;
}

[class*="btn-style"]:hover {
    transform: scale(0.97);
}

/* btn-style1 */
.btn-style1 {
    width: 100%;
    height: 65px;
    background: var(--main-color);
    font-size: 20px;
    color: #fff;
}

.btn-style1:hover {
    background: var(--main-hover-color);
}

.btn-style2 {
    width: 100%;
    height: 40px;
    background: var(--btn-gray);
    font-size: 18px;
    color: #000;
    border-radius: 5px;
}

.btn-style3 {
    padding: 10px 20px;
    height: 50px;
    background: #8f8f8f;
    font-size: 18px;
    color: #fff;
    border-radius: 5px;
}

.btn-style3:hover {
    background: #7c7c7c;
}

.btn-style4 {
    height: 50px;
    background: var(--main-color);
    font-size: 18px;
    color: #fff;
    border-radius: 5px;
    min-width: 230px;
}

.btn-style5 {
    height: 50px;
    background: var(--btn-gray);
    font-size: 18px;
    color: #fff;
    border-radius: 5px;
    min-width: 230px;
    color: #000;
}

.btn-style6 {
    height: 50px;
    background: #fff;
    font-size: 18px;
    color: #fff;
    border-radius: 5px;
    min-width: 230px;
    color: #000;
    box-shadow: 0px 4px 9.6px 0.4px rgba(0, 0, 0, 0.05),
        2.1px 3.4px 9.6px 0.4px rgba(0, 0, 0, 0.05);
}

.btn-style7 {
    border: 1px solid var(--gray-color);
    color: #222;
    padding: 10px 20px;
    font-size: 18px;
    box-shadow: 0px 4px 9.6px 0.4px rgba(0, 0, 0, 0.05),
        2.1px 3.4px 9.6px 0.4px rgba(0, 0, 0, 0.05);
}

.btn-style8 {
    font-size: 18px;
    min-width: 230px;
    background: #f6cf91;
    padding: 20px;
    height: 72px;
    box-shadow: 0px 4px 9.6px 0.4px rgba(0, 0, 0, 0.05),
        2.1px 3.4px 9.6px 0.4px rgba(0, 0, 0, 0.05);
}

.btn-style9 {
    font-size: 18px;
    min-width: 230px;
    background: #a1daca;
    padding: 20px;
    height: 72px;
    box-shadow: 0px 4px 9.6px 0.4px rgba(0, 0, 0, 0.05),
        2.1px 3.4px 9.6px 0.4px rgba(0, 0, 0, 0.05);
}

.btn-area [class*="btn-style"]+[class*="btn-style"] {
    margin-left: 8px;
}

.btn-area {
    text-align: right;
    margin-top: 50px;
}

/*  폰트 스타일
--------------------------------------------- */
.heading1 {
    font-size: 25px;
    font-weight: 800;
    margin-bottom: 20px;
}

.heading2 {
    font-size: 22px;
    font-weight: 800;
    margin-bottom: 20px;
}


.heading3 {
    font-size: 18px;
    margin-bottom: 20px;
}


/*  인풋 스타일
--------------------------------------------- */
.input-group {}

.input-group+.input-group {
    margin-top: 20px;
}

.input-group label {
    font-size: 16px;
    font-weight: 700;
    margin-bottom: 10px;
    display: block;
}

.input-group input:not([type="button"], [type="file"]) {
    width: 100%;
    height: 50px;
    padding: 0 20px;
    border-radius: 7px;
    background: #f8f8f8;
    font-size: 18px;
}

.input-group input::placeholder {
    color: #bbbbbb;
}

.input-group textarea {
    width: 100%;
    padding: 20px;
    background: #f8f8f8;
    font-size: 18px;
    border-radius: 7px;
}

.input-group textarea::placeholder {
    color: #bbbbbb;
}

.input-group.file {
    display: flex;
    align-items: end;
    gap: 10px;
}

.input-group select {
    width: 300px;
    height: 40px;
    padding: 0 10px;
    border-radius: 7px;
    border: 1px solid var(--gray-font);
    appearance: none;
    background: url(../img/arrow.png) no-repeat center right 9px / 20px;
}

.input-group select option {
    padding: 10px;
}

/* 회원가입 */
.signup-area {
    max-width: 700px;
    margin: 0 auto;
    padding: 100px 0;

}

.signup-area .heading1 {
    text-align: center;
    font-size: 30px;
}

.signup-area ul li .wrap {
    display: flex;
    align-items: center;
    gap: 10px;
}

.input-group .free-area {
    display: flex;
    gap: 10px;
}

/* 파일 첨부 */

.file-wrap {
    display: flex;
    align-items: center;
    gap: 15px;
}

.input-group .file-area {
    border: 1px solid #ddd;
    border-radius: 10px;
    width: 120px;
    height: 120px;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
}

.input-group .file-area.file-item {
    border: none;
}

.input-group .file-area:not(.file-item):before {
    content: "\ea4b";
    font-family: var(--icon);
    color: #555;
    font-size: 27px;
}

.input-group .file-area input[type="file"] {
    z-index: 100;
    cursor: pointer;
    position: absolute;
    height: 100%;
    width: 100%;
    top: 0;
    left: 0;
    opacity: 0;
}

.input-group .file-item .delete-btn {
    position: absolute;
    top: -10px;
    right: -8px;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: #484848;
    color: #fff;
}

.input-group .file-item img {
    width: 100%;
    height: 100%;
    border-radius: 10px;
}

.input-group .file-item .delete-btn::before {
    content: "\e922";
    font-family: var(--icon);
    color: #fff;
    font-size: 21px;
}

/*  상태 스타일
--------------------------------------------- */
[class*="msg-txt"] {
    line-height: 2;
}

.msg-txt1 {
    color: var(--main-color);
    /* 성공 메세지 */
}

.msg-txt2 {
    color: var(--warning-color);
    /* 실패 메세지 */
}



/*************************************
    # 공통 swiper
************************************/

.swiper {
    width: 100%;
    min-height: 400px;
}

.swiper-slide {
    text-align: center;
    font-size: 18px;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 10px;
    overflow: hidden;
}
.swiper-slide > a {overflow: hidden;}
.swiper-slide img {
    display: block;
    width: 100%;
    object-fit: cover;
    border-radius: 20px;
    cursor: pointer;
}

/* .swiper-button-next, 
.swiper-button-prev {color: #000 !important;} */

.swiper.noticeSwiper {
    height: 110px;
   	min-height: auto;
}

.swiper.noticeSwiper .tit {
    display: flex;
    justify-content: space-between;
}

.swiper.noticeSwiper .swiper-slide {
    margin: 0;
}

